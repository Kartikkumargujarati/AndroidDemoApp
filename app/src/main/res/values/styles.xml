<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressSpinnerThemeFullScreen" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/global_tint_color</item>
        <item name="android:alertDialogStyle">@style/CustomProgressSpinnerStyle</item>
        <item name="android:windowBackground">@color/global_transparent_color</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomProgressSpinnerStyle">
        <item name="android:bottomBright">@color/global_transparent_color</item>
        <item name="android:bottomDark">@color/global_transparent_color</item>
        <item name="android:bottomMedium">@color/global_transparent_color</item>
        <item name="android:centerBright">@color/global_transparent_color</item>
        <item name="android:centerDark">@color/global_transparent_color</item>
        <item name="android:centerMedium">@color/global_transparent_color</item>
        <item name="android:fullBright">@color/global_transparent_color</item>
        <item name="android:fullDark">@color/global_transparent_color</item>
        <item name="android:topBright">@color/global_transparent_color</item>
        <item name="android:topDark">@color/global_transparent_color</item>
    </style>

</resources>
